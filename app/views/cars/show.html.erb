<h1><%= @car.brand %></h1>
<ul>
  <li>
    <h3><%= @car.model %></h3>
  </li>
  <li>
    <h3><%= @car.year %></h3>
  </li>
  <li>
    <h3><%= @car.fuel %></h3>
  </li>
</ul>

<%= simple_form_for [@car, @review] do |f| %>
  <%= f.input :comment %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>

<%= link_to "Back", cars_path %>

<% @car.reviews.each do |review| %>
  <p><%= review.comment %></p>
  <p><%= review.rating %></p>
<% end %>

<% if @car.favourites.empty? %>
  <%= simple_form_for [@car, @favourite] do |f| %>
  <%= f.submit %>
<% end %>
<% else %>
  <p>This car has been favourited</p>
<% end %>
