<% @favourites.each do |favourite| %>
  <p><%= favourite.car.model %></p>
  <p><%= favourite.car.brand %></p>
  <p><%= favourite.car.year %></p>
  <p><%= favourite.car.fuel %></p>
  <%= link_to "|Delete",
          favourite_path(favourite),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
<% end %>
